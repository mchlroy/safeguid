{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": [ "./node_modules/@types" ],
    "skipLibCheck": true,
    "lib": [ "ES2015", "DOM"],
    "removeComments": false,
  },
  "include": ["./lib/**/*.ts" ],
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "target": "ES6"
  },
  "exclude": ["node_modules"]
}